<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="@color/colorMain2"
                android:endColor="@color/colorMain2"
                android:startColor="@color/colorMain2"
                android:type="linear"/>
            <stroke
                android:width="2dp"
                android:color="@color/colorMain5"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="@color/colorMain2"
                android:endColor="@color/colorMain2"
                android:startColor="@color/colorMain2"
                android:type="linear"/>
            <stroke
                android:width="2dp"
                android:color="@color/colorMain5"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/colorMain6"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="@color/colorMain7"
                android:endColor="@color/colorMain7"
                android:startColor="@color/colorMain7"
                android:type="linear"/>
        </shape>
    </item>
</selector>